@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix um: <https://vocab.um.es#> .
@prefix schema: <http://schema.org/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<#TriplesMapSalesProduct> a rr:TriplesMap;
    rml:logicalSource [
        rml:source "Chunk_BigBasket.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "https://vocab.um.es#sales_product/{FAIR_URI}";
        rr:class um:sales_product
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasBrand;
        rr:objectMap [ rr:column "Brand" ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasCategory;
        rr:objectMap [ rr:column "Category" ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasSubCategory;
        rr:objectMap [ rr:column "SubCategory" ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasImage;
        rr:objectMap [ rr:column "Image_Url"; rr:datatype xsd:anyURI ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasAbsoluteUrl;
        rr:objectMap [ rr:column "Absolute_Url"; rr:datatype xsd:anyURI ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasProductName;
        rr:objectMap [ rr:column "ProductName" ]
    ];
    rr:predicateObjectMap [
        rr:predicate schema:hasOffer;
        rr:objectMap [
            rr:parentTriplesMap <#TriplesMapOffer>;
        ]
    ].

<#TriplesMapOffer> a rr:TriplesMap;
    rml:logicalSource [
        rml:source "Chunk_BigBasket.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "https://vocab.um.es#offer/{FAIR_URI}";
        rr:class um:offer
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasEligibleQuantity;
        rr:objectMap [ rr:column "Quantity" ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasPrice;
        rr:objectMap [ rr:column "Price"; rr:datatype xsd:decimal ]
    ];
    rr:predicateObjectMap [
        rr:predicate um:hasDiscountPrice;
        rr:objectMap [ rr:column "DiscountPrice"; rr:datatype xsd:decimal ]
    ].
